<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.UserFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:id="@+id/menu_follow_liked"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.cardview.widget.CardView
                android:id="@+id/menus"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/menu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:text="@string/th_c_n_c_a_t_i"
                    android:layout_gravity="center_horizontal"/>
                <ImageButton
                    android:id="@+id/btn_menu_refresh"
                    android:src="@drawable/ic_cached_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:contentDescription="@string/todo"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/menusRecyclerView"
                android:layout_below="@+id/menus"
                android:background="@color/white"
                android:layout_marginHorizontal="8dp"
                android:layout_weight="2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/likedDishes"
                android:layout_below="@+id/menusRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/likedDish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text="@string/m_n_y_u_th_ch"/>
                <ImageButton
                    android:id="@+id/btn_liked_refresh"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_cached_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/white"
                android:id="@+id/likedDishList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_below="@+id/likedDishes"/>
            <androidx.cardview.widget.CardView
                android:id="@+id/myDishes"
                android:layout_below="@+id/likedDishList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/mDish"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    android:textStyle="bold"
                    android:text="Món của tôi"/>
                <ImageButton
                    android:id="@+id/btn_md_refresh"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_cached_black_24dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/todo"
                    tools:ignore="RtlHardcoded" />
            </androidx.cardview.widget.CardView>
            <androidx.recyclerview.widget.RecyclerView
                android:background="@color/white"
                android:id="@+id/myDishList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:layout_below="@+id/myDishes"/>
        </RelativeLayout>

    </ScrollView>

</FrameLayout>