<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DishAddActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:layout_marginHorizontal="10dp">
        <ImageButton
            android:id="@+id/back"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="@string/app_name"/>
        <TextView
            android:id="@+id/lblDish"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textStyle="bold"
            android:text="@string/new_recipe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/dish_name"
            android:layout_below="@+id/lblDish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="16sp"
            android:hint="@string/input_dish_name"
            android:autofillHints="TODO"/>
        <TextView
            android:id="@+id/chooseImage"
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            android:layout_below="@+id/dish_name"
            android:text="@string/ch_n_nh_ch_nh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageView
            android:id="@+id/dish_ava"
            android:src="@drawable/basic_dish"
            android:scaleType="fitCenter"
            android:textSize="16sp"
            android:layout_below="@+id/chooseImage"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:contentDescription="@string/app_name" />
        <EditText
            android:id="@+id/des"
            android:layout_below="@+id/dish_ava"
            android:hint="Nhập mô tả cho món ăn"
            android:orientation="vertical"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:gravity="top|left"
            android:textSize="16sp"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"/>
        <EditText
            android:id="@+id/material"
            android:hint="Nhập nguyên liệu"
            android:orientation="vertical"
            android:layout_below="@+id/des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollHorizontally="false"
            android:gravity="top|left"
            android:textSize="16sp"
            android:overScrollMode="always"
            android:scrollbarStyle="insideInset"
            android:scrollbars="vertical"/>
        <TextView
            android:id="@+id/category"
            android:layout_marginVertical="6dp"
            android:textSize="17sp"
            android:text="Nhấp chọn danh mục cho món ăn"
            android:textStyle="normal"
            android:layout_below="@+id/material"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/newCategory"
            android:orientation="horizontal"
            android:layout_below="@id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_weight="1"
                android:id="@+id/cateAdd"
                android:inputType="text"
                android:textSize="16sp"
                android:hint="@string/newcate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <com.google.android.material.button.MaterialButton
                android:layout_weight="3"
                android:id="@+id/btnCateSave"
                android:text="Thêm mới"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addNewStep"
            android:text="Thêm bước mới"
            android:layout_below="@+id/newCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/step_and_img"
            android:orientation="vertical"
            android:layout_below="@+id/addNewStep"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/addDish"
            android:text="Hoàn thành"
            android:layout_below="@id/step_and_img"
            app:cornerRadius="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"/>
    </RelativeLayout>
</ScrollView>